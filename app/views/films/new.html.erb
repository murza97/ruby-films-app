<h3>Добавление нового фильма</h3>
<%= form_for :film, url: films_path do |f| %>
  <p>
    Название<br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </p>
  <p>
    Локализованное название<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    Год выпуска<br>
    <%= f.text_field(:year, {:class => 'form-control'}) %>
  </p>
  <p>
    Рейтинг<br>
    <%= f.text_field(:rating, {:class => 'form-control'}) %>
  </p>
  <p>
    Текстовое описание<br>
    <%= f.text_field(:text, {:class => 'form-control'}) %>
  </p>
  <p>
    Изображение<br>
    <%= f.file_field(:picture) %>
  </p>
  <p>
    Страна производства<br>
    <%= f.text_field(:country, {:class => 'form-control'}) %>
  </p>
  <p>
    Жанры<br>
    <%= f.text_field(:kind, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit(:class => 'btn btn-success') %>
  </p>
<% end %>
